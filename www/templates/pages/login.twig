{% extends 'template.twig' %}

{% block title %}Login | {% endblock %}

{% block content %}
	<div class="row justify-content-center">
		<div class="col-md-5 col-sm-10 col-xs-12">
			<form action="{{ path_for('auth.login') }}" method="POST" class="mt-3" autocomplete="off">
				{% if flash.getMessage('auth.error') %}
					<div class="alert alert-danger">
						{{ flash.getMessage('auth.error') | first }}
					</div>
				{% endif %}

				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" name="email" id="email" value="{{ old.email }}" class="form-control{{ errors.email ? ' is-invalid' : '' }}" />
					{% if errors.email %}
						<small class="form-text invalid-feedback">{{ errors.email | first }}</small>
					{% endif %}
				</div>

				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="password" id="password" class="form-control{{ errors.password ? ' is-invalid' : '' }}" />
					{% if errors.password %}
						<small class="form-text invalid-feedback">{{ errors.password | first }}</small>
					{% endif %}
				</div>

				{{ csrf_field() | raw() }}

				<button type="submit" class="btn btn-block btn-success">Login</button>
			</form>
		</div>
	</div>
{% endblock %}
