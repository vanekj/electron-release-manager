<div id="modal-remove-token" class="modal fade" tabindex="-1">
	<form class="modal-dialog" action="{{ path_for('dashboard.tokens') }}" method="POST">
		<input type="hidden" name="action" value="delete" />
		<input type="hidden" name="token_id" data-value="tokenId" />

		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Delete token?</h5>
				<button type="button" class="close" data-dismiss="modal">
					<span>&times;</span>
				</button>
			</div>

			<div class="modal-body">
				<p>Removing this token can cause serious problems.</p>
			</div>

			<div class="modal-footer">
				<button type="submit" class="btn btn-outline-danger">Delete</button>
			</div>
		</div>
	</form>
</div>
